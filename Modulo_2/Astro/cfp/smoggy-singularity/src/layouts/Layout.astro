---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
        />
    </head>
    <body>
        <header>
            <div id="principal">
                <div class="logo">
                    <img
                        src="https://fundacionalbertomarvelli.org/wp-content/uploads/2022/05/logo-sin-fondo.png"
                        alt="Don Bosco"
                        class="don_bosco"
                    />
                </div>

                <div class="correo">
                    <i class="bi bi-envelope"></i>
                    <a href="#" class="general"
                        >info@fundacionalbertomarvelli.org</a
                    >
                </div>
                <div class="telefono">
                    <i class="bi bi-telephone"></i>
                    <a href="#" class="general">+502 2209-9999</a>
                </div>
                <div class="redes">
                    <a href="#"
                        ><i class="bi bi-facebook" style="color: blue;"></i></a
                    >
                    <a href="#"
                        ><i class="bi bi-instagram" style="color: purple;"
                        ></i></a
                    >
                </div>
                <div class="boton">
                    <a href="#"
                        ><button>Dona hoy <i class="bi bi-heart"></i></button
                        ></a
                    >
                </div>
            </div>
            <!-- -----------------------------barra de navegacion ------------------------------------>
            <nav>
                <div class="enlaces"><a href="#" class="start">Inicio</a></div>

                <div class="enlaces"><a href="#">Nosotros</a></div>

                <div class="enlaces"><a href="#">Vida en CFP</a></div>

                <div class="enlaces"><a href="#">Enlaces</a></div>

                <div class="enlaces"><a href="# ">Contacto</a></div>
            </nav>
        </header>

        <main>
            <div class="cartel">
                <div class="puntos"></div>
                <div class="puntos"></div>
                <div class="puntos"></div>
            </div>
            <p></p>
        </main>

        <footer class="bg-black h-full w-full flex justify-center">
            <div class="bg-blue-400 h-svh w-svw grid grid-cols-3 gap-4 ">
                <div class="bg-orange-200 h-full w-full">celda 1</div>
                <div class="bg-orange-200 h-full w-full">celda 2</div>
                <div class="bg-orange-200 h-full w-full">celda 3</div>
                <div class="bg-orange-200 h-full w-full">celda 4</div>
                <div class="bg-orange-200 h-full w-full">celda 5</div>
                <div class="bg-orange-200 h-full w-full">celda 6</div>
            </div>
        </footer>
    </body>
</html>

<style>
    * {
        padding: 0;
        margin: 0;
    }

    /* ----------------------------header------------------------------------------- */
    header {
        height: 10vh;
        width: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        padding: 50px;
    }

    .don_bosco {
        width: 18vw;
        height: 13vh;

        align-self: center;
    }

    #principal {
        height: 3vh;
        width: 80%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    a {
        font-size: 15px;
        font-weight: 100;
        color: black;
        text-decoration: none;
    }
    .start {
        text-decoration: underline 3px;
    }

    /* -------------------------------------iconos---------------------------------- */
    .bi {
        font-size: 25px;
    }
    .correo,
    .telefono {
        display: flex;
        gap: 10px;
        align-items: center;
        justify-content: center;
    }

    /* ----------------------------navegacion------------------------------------------- */
    nav {
        font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
        /* font-size: 25px; */
        background-color: white;
        margin-top: 50px;
        height: 3vh; /*alto*/
        width: 80%; /*ancho*/
        display: flex;
        justify-content: space-between;
    }
    .enlaces {
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 198px;
        height: 35px;
        background-color: rgb(247, 181, 22);
    }

    /* --------------------------------------boton----------------------------------- */

    button {
        gap: 6px;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 21vh; /*ancho*/
        height: 3vw; /*alto*/
        border-style: none;
        border-radius: 5%;
        color: white;
        background-color: rgb(208, 0, 0);
    }
    /* ----------------------------main--------cuerpo principal----------------------------------- */
    main {
        height: 50vh; /*alto*/
        width: 97%; /*ancho*/
        margin-left: 20px;
        background-color: rgb(95, 135, 166);
    }
    .cartel {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        background-color: gray;
        height: 100px;
        width: 200px;
        gap: 25px;
    }
    .puntos {
        background-color: rgb(247, 181, 22);
        height: 25px;
        width: 25px;
        border-radius: 50%;
        gap: 5px;
    }
</style>

